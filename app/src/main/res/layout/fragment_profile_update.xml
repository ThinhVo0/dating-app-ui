<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipToPadding="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal">

        <!-- Images Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/modern_rounded_background"

            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <include
                layout="@layout/section_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Personal Info Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/modern_rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <include
                layout="@layout/section_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Gender Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/modern_rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <include
                layout="@layout/section_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Hobbies Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/modern_rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <include
                layout="@layout/section_hobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Preferences Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/modern_rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <include
                layout="@layout/section_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Address Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/modern_rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <include
                layout="@layout/section_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LÆ°u"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00BCD4"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            app:cornerRadius="8dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>