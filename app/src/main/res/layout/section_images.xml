    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivImagesIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_infoplus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvImagesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ảnh hồ sơ (tối đa 9)"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ivImagesIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivImagesIcon"
        app:layout_constraintStart_toEndOf="@id/ivImagesIcon"
        android:layout_marginStart="8dp" />

