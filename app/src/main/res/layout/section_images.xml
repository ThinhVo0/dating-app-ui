<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivImagesIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_infoplus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvImagesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ảnh hồ sơ (tối đa 9)"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ivImagesIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivImagesIcon"
        app:layout_constraintStart_toEndOf="@id/ivImagesIcon"
        android:layout_marginStart="8dp" />

    <GridLayout
        android:id="@+id/glProfileImages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toBottomOf="@id/ivImagesIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
        <ImageView
            android:id="@+id/img9"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/image1"
            android:layout_margin="4dp" />
    </GridLayout>

    <Button
        android:id="@+id/btnUploadImages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00BCD4"
        android:textAllCaps="false"
        android:padding="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/glProfileImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>