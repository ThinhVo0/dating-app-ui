<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <!-- Tin nhắn của bản thân - Thiết kế hiện đại hơn -->
    <LinearLayout
        android:id="@+id/selfMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginVertical="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardElevation="1dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#1A73E8">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/tvMessageSelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:maxWidth="280dp"
                android:text="Xin chào!" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/tvTimeSelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:textSize="11sp"
            android:textColor="#78909C"
            android:paddingTop="2dp"
            android:text="12:34" />
    </LinearLayout>

    <!-- Tin nhắn của người khác - Thiết kế hiện đại hơn -->
    <LinearLayout
        android:id="@+id/otherMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:visibility="gone"
        android:layout_marginVertical="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardElevation="1dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#F1F3F4">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/tvMessageOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#202124"
                android:textSize="16sp"
                android:maxWidth="280dp"
                android:text="Chào bạn!" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/tvTimeOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:textSize="11sp"
            android:textColor="#78909C"
            android:paddingTop="2dp"
            android:text="12:35" />
    </LinearLayout>
</LinearLayout>