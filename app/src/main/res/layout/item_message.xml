<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <!-- Tin nhắn của bản thân -->
    <LinearLayout
        android:id="@+id/selfMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginVertical="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#2196F3">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/tvMessageSelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:maxWidth="320dp"
                android:text="Xin chào!" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/tvTimeSelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:textColor="#757575"
            android:paddingTop="4dp"
            android:text="12:34" />
    </LinearLayout>

    <!-- Tin nhắn của người khác -->
    <LinearLayout
        android:id="@+id/otherMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:visibility="gone"
        android:layout_marginVertical="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E0E0E0">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/tvMessageOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:maxWidth="320dp"
                android:text="Chào bạn!" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/tvTimeOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="12sp"
            android:textColor="#757575"
            android:paddingTop="4dp"
            android:text="12:35" />
    </LinearLayout>
</LinearLayout>