<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Tin nhắn của bản thân -->
    <LinearLayout
        android:id="@+id/selfMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvMessageSelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/self_message_background"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:maxWidth="280dp" />

        <TextView
            android:id="@+id/tvTimeSelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:textColor="#757575"
            android:paddingTop="4dp" />
    </LinearLayout>

    <!-- Tin nhắn của người khác -->
    <LinearLayout
        android:id="@+id/otherMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvMessageOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/other_message_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:maxWidth="280dp" />

        <TextView
            android:id="@+id/tvTimeOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="12sp"
            android:textColor="#757575"
            android:paddingTop="4dp" />
    </LinearLayout>
</LinearLayout>