<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Zodiac Sign -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivZodiacIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_zodiacsign" />

        <Spinner
            android:id="@+id/spZodiac"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Personality Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivPersonalityIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_mind" />

        <Spinner
            android:id="@+id/spPersonality"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Communication Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivCommunicationIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_comunicate" />

        <Spinner
            android:id="@+id/spCommunication"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Love Language -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivLoveLanguageIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_romance" />

        <Spinner
            android:id="@+id/spLoveLanguage"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Pet Preference -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivPetPreferenceIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_pet" />

        <Spinner
            android:id="@+id/spPetPreference"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Drinking Habit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivDrinkingIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_drink" />

        <Spinner
            android:id="@+id/spDrinking"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Smoking Habit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivSmokingIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_smoking" />

        <Spinner
            android:id="@+id/spSmoking"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Sleeping Habit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView

            android:id="@+id/ivSleepingIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_sleep" />

        <Spinner
            android:id="@+id/spSleeping"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>