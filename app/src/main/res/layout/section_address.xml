<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Spinner Tỉnh/Thành phố -->
        <TextView
            android:id="@+id/tvProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tỉnh/Thành phố"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Spinner
            android:id="@+id/spinnerProvince"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvProvince"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:background="@drawable/spinner_background" />

        <!-- Spinner Quận/Huyện -->
        <TextView
            android:id="@+id/tvDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quận/Huyện"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintTop_toBottomOf="@id/spinnerProvince"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerDistrict"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDistrict"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:background="@drawable/spinner_background" />

        <!-- Spinner Phường/Xã -->
        <TextView
            android:id="@+id/tvWard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phường/Xã"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintTop_toBottomOf="@id/spinnerDistrict"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerWard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvWard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Nút Cập Nhật -->
        <Button
            android:id="@+id/btnUpdateAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00BCD4"
            android:textAllCaps="false"
            android:padding="8dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerWard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
