<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivHobbiesIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/hobby"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvHobbiesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ivHobbiesIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivHobbiesIcon"
        app:layout_constraintStart_toEndOf="@id/ivHobbiesIcon"
        android:layout_marginStart="8dp" />

    <ListView
        android:id="@+id/lvHobbies"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/list_background"
        android:choiceMode="multipleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivHobbiesIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>